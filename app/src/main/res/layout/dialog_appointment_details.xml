<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_margin="@dimen/_18sdp"
              android:background="@color/colorWhite">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialogAppointmentTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:gravity="center_vertical"
                android:text="Upcoming Appointment"
                android:padding="@dimen/_10sdp"
                app:fontFamily="@font/biryani_bold"
                android:textSize="@dimen/_14ssp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:id="@+id/appointmentClose"
                android:padding="@dimen/_13sdp"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_close"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_14sdp">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialogDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:fontFamily="@font/biryani_extrabold"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorBlack"/>


        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialogAppointmentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/_5sdp"
                android:textAllCaps="true"
                app:fontFamily="@font/biryani_light"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorBlack"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorEditBox"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialogDoctorPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text=""
                android:drawableLeft="@drawable/ic_call_dialog"
                android:drawablePadding="@dimen/_5sdp"
                app:fontFamily="@font/biryani_light"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorBlack"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorEditBox"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialogHospitalLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_location_primary"
                android:drawablePadding="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text=""
                app:fontFamily="@font/biryani_light"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorBlack"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorEditBox"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dialogPaymentStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_payment"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:text="Payment Status : Not Done"
                    app:fontFamily="@font/biryani_light"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/colorBlack"/>

            <androidx.cardview.widget.CardView
                    android:id="@+id/makePayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/colorPrimary">

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:paddingRight="@dimen/_7sdp"
                        android:paddingLeft="@dimen/_7sdp"
                        android:textColor="@color/colorWhite"
                        android:text="Make Payment"
                        android:textSize="@dimen/_9ssp"
                        app:fontFamily="@font/biryani"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorEditBox"/>

    <LinearLayout
            android:id="@+id/dialogCancelAppointmentLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialogCancelAppointment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="CANCEL APPOINTMENT"
                app:fontFamily="@font/biryani_bold"
                android:textSize="@dimen/_12ssp"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"/>
    </LinearLayout>
</LinearLayout>