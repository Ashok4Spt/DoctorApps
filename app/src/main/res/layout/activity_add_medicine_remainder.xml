<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackground"
        >

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimaryDark"
                app:title="Add Medicine"
                app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"/>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorBackground"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/topLayout">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="horizontal">


            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="@dimen/_minus14sdp"
                    app:srcCompat="@drawable/top_curve"
                    app:tint="@color/colorPrimaryDark"/>
        </LinearLayout>


        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:orientation="vertical">


                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:elevation="12dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:cardCornerRadius="6dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/nameOfMedicine"
                                android:hint="Name of Medicine"
                                android:text=""
                                android:textCursorDrawable="@color/colorFormLabel"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:textColor="@color/colorBlack90"
                                android:textSize="@dimen/_14ssp"
                                android:fontFamily="@font/biryani_semibold"/>


                        <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/intakeTypeSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_8sdp"
                                android:textColor="@color/colorBlack90"
                                android:backgroundTint="@android:color/transparent"
                                android:textSize="@dimen/_14ssp"
                                android:padding="@dimen/_3sdp"
                                app:fontFamily="@font/biryani_semibold"/>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@color/colorPrimary90"/>

                        <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/dosageTypeSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_8sdp"
                                android:padding="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textColor="@color/colorBlack90"
                                android:backgroundTint="@android:color/transparent"
                                android:textSize="@dimen/_14ssp"
                                app:fontFamily="@font/biryani_semibold"/>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@color/colorPrimary90"/>

                        <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/whenToTakeSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_8sdp"
                                android:padding="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textColor="@color/colorBlack90"
                                android:backgroundTint="@android:color/transparent"
                                android:textSize="@dimen/_14ssp"
                                app:fontFamily="@font/biryani_semibold"/>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@color/colorPrimary90"/>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="@dimen/_5sdp">

                            <androidx.appcompat.widget.AppCompatEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/strength"
                                    android:maxLines="1"
                                    android:layout_weight="1"
                                    android:hint="Strength"
                                    android:digits="0123456789."
                                    android:text=""
                                    android:textColor="@color/colorBlack90"
                                    android:textSize="@dimen/_14ssp"
                                    android:fontFamily="@font/biryani_semibold"/>

                            <androidx.appcompat.widget.AppCompatSpinner
                                    android:id="@+id/strengthTypeSpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="@dimen/_8sdp"
                                    android:paddingRight="@dimen/_8sdp"
                                    android:padding="@dimen/_3sdp"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorBlack90"
                                    android:backgroundTint="@android:color/transparent"
                                    android:textSize="@dimen/_14ssp"
                                    app:fontFamily="@font/biryani_semibold"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:fontFamily="@font/biryani_extrabold"
                                    android:textColor="@color/colorFormLabel"
                                    android:textSize="@dimen/_14ssp"
                                    android:text="Start Date"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:fontFamily="@font/biryani_extrabold"
                                    android:textColor="@color/colorFormLabel"
                                    android:textSize="@dimen/_14ssp"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:text="End Date"/>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                            <LinearLayout
                                    android:id="@+id/fromDateLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:gravity="center">

                                <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/fromDayTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:fontFamily="@font/biryani_extrabold"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/_22ssp"
                                        android:text="-"/>

                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="vertical"
                                        android:layout_marginLeft="@dimen/_10sdp">

                                    <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/fromMonthTextView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:fontFamily="@font/biryani"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="@dimen/_14ssp"
                                            android:text="---"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/fromWeekTextView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:fontFamily="@font/biryani"
                                            android:layout_marginTop="@dimen/_minus8sdp"
                                            android:textColor="@color/colorBlack60"
                                            android:textSize="@dimen/_14ssp"
                                            android:text="---"/>
                                </LinearLayout>
                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:alpha="0.9"
                                    app:srcCompat="@drawable/ic_right_arrow"/>

                            <LinearLayout
                                    android:id="@+id/toDateLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center|right"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_weight="1">

                                <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/toDayTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:fontFamily="@font/biryani_extrabold"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/_22ssp"
                                        android:text="-"/>

                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="vertical"
                                        android:layout_marginLeft="@dimen/_10sdp">

                                    <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/toMonthTextView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:fontFamily="@font/biryani"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="@dimen/_14ssp"
                                            android:text="---"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/toWeekTextView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:fontFamily="@font/biryani"
                                            android:layout_marginTop="@dimen/_minus8sdp"
                                            android:textColor="@color/colorBlack60"
                                            android:textSize="@dimen/_14ssp"
                                            android:text="---"/>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@color/colorPrimary90"/>

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:fontFamily="@font/biryani_extrabold"
                                android:textColor="@color/colorFormLabel"
                                android:textSize="@dimen/_14ssp"
                                android:text="Select Time"/>

                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_4sdp"
                                android:id="@+id/addTimeImageView"
                                app:srcCompat="@drawable/ic_add_timie"/>


                        <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:id="@+id/timeRecycleView">

                        </androidx.recyclerview.widget.RecyclerView>

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:fontFamily="@font/biryani"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:textColor="@color/colorBlack90"
                                android:textSize="@dimen/_12ssp"
                                android:layout_gravity="center"
                                android:text="Click on clock button to add time"/>

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:fontFamily="@font/biryani_extrabold"
                                android:textColor="@color/colorFormLabel"
                                android:textSize="@dimen/_14ssp"
                                android:text="Remarks"/>


                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/remarks"
                                android:layout_marginTop="@dimen/_minus14sdp"
                                android:textColor="@color/colorBlack90"
                                android:textSize="@dimen/_14ssp"
                                android:textCursorDrawable="@color/colorFormLabel"
                                android:fontFamily="@font/biryani_semibold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/saveReminderButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_42sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Save"
                        android:paddingLeft="@dimen/_70sdp"
                        android:paddingRight="@dimen/_70sdp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/biryani_semibold"
                        android:background="@drawable/color_accent_button"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>