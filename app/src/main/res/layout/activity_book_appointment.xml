<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackground"
        >

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:elevation="0dp"
            android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimaryDark"
                app:title="Book Appointment"
                app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"/>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorBackground"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/topLayout">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:background="@color/colorPrimaryDark"
                        android:paddingLeft="@dimen/_14sdp"
                        android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/doctorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:text=""
                            android:textSize="@dimen/_14ssp"
                            app:fontFamily="@font/biryani_bold"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/doctorSpecialization"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:alpha="0.94"
                            android:layout_marginTop="@dimen/_minus8sdp"
                            android:text=""
                            android:textSize="@dimen/_14ssp"
                            app:fontFamily="@font/biryani"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/doctorExperience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_minus8sdp"
                            android:textColor="@color/colorWhite"
                            android:text=""
                            android:alpha="0.94"
                            android:textSize="@dimen/_14ssp"
                            app:fontFamily="@font/biryani"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_42sdp"
                            android:layout_height="@dimen/_42sdp"
                            android:padding="@dimen/_8sdp"
                            android:scaleType="fitXY"
                            android:background="@drawable/ic_circle_white"
                            app:srcCompat="@drawable/ic_call_red"/>

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_34sdp"
                            android:layout_height="@dimen/_34sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/ic_circle_accent"
                            app:srcCompat="@drawable/ic_email"/>

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_34sdp"
                            android:layout_height="@dimen/_34sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/ic_circle_accent"
                            app:srcCompat="@drawable/ic_hospital_location"/>

                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="@dimen/_minus14sdp"
                    app:srcCompat="@drawable/top_curve"
                    app:tint="@color/colorPrimaryDark"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/imageLayout"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_70sdp"
                android:background="@drawable/color_accent_circle"
                android:elevation="5dp">

            <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_108sdp"
                    android:layout_height="@dimen/_108sdp"
                    app:cardCornerRadius="@dimen/_54sdp"
                    android:layout_gravity="center"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/colorAccent">

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/doctorImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@mipmap/ic_launcher"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:visibility="visible"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/topLayout">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/_14sdp"
                    android:paddingRight="@dimen/_14sdp"
                    android:paddingBottom="@dimen/_14sdp"
                    android:orientation="vertical">


                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:elevation="12dp"
                        android:layout_marginTop="@dimen/_44sdp"
                        app:cardCornerRadius="6dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/_14sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:maxLines="1"
                                android:textColor="@color/colorPrimary"
                                android:text="Select Date"
                                android:textSize="@dimen/_11ssp"
                                app:fontFamily="@font/biryani_bold"/>

                        <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/appointmentDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="Monday|12 Aug 2019"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_8sdp"
                                android:textColor="@color/colorBlack90"
                                android:drawableRight="@drawable/ic_book_appointment"
                                android:background="@drawable/edit_text_box_primary"
                                android:textSize="@dimen/_11ssp"
                                app:fontFamily="@font/biryani"/>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:alpha="0.70"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@color/colorPrimary90"/>


                        <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/selectClinic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:drawablePadding="@dimen/_4sdp"
                                android:drawableRight="@drawable/ic_arrow_right"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textColor="@color/colorPrimary"
                                android:text="Select Clinic"
                                android:textSize="@dimen/_11ssp"
                                app:fontFamily="@font/biryani_bold"/>


                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:alpha="0.70"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@color/colorPrimary90"/>


                        <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/selectAppointmentType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:drawableRight="@drawable/ic_arrow_right"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textColor="@color/colorPrimary"
                                android:text="Select Appointment Type"
                                android:textSize="@dimen/_11ssp"
                                app:fontFamily="@font/biryani_bold"/>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:alpha="0.70"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@color/colorPrimary90"/>


                        <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/timeOfAppointment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:drawableRight="@drawable/ic_arrow_right"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textColor="@color/colorPrimary"
                                android:text="Time of Appointment"
                                android:textSize="@dimen/_11ssp"
                                app:fontFamily="@font/biryani_bold"/>

                        <LinearLayout
                                android:id="@+id/appointmentTimeLayout"
                                android:visibility="visible"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_12sdp">

                            <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_weight="1">

                                <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/appointmentMorning"
                                        android:layout_width="@dimen/_48sdp"
                                        android:layout_height="@dimen/_48sdp"
                                        app:srcCompat="@xml/morning_selector"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/morningTime"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="morning"
                                        android:textColor="@color/colorBlack90"
                                        android:textSize="@dimen/_12ssp"
                                        app:fontFamily="@font/biryani"/>
                            </LinearLayout>

                            <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_weight="1">

                                <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/appointmentAfternoon"
                                        android:layout_width="@dimen/_48sdp"
                                        android:layout_height="@dimen/_48sdp"
                                        app:srcCompat="@xml/afternoon_selector"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/afternoonTime"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Afternoon"
                                        android:textColor="@color/colorBlack90"
                                        android:textSize="@dimen/_12ssp"
                                        app:fontFamily="@font/biryani"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_weight="1">

                                <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/appointmentEvening"
                                        android:layout_width="@dimen/_48sdp"
                                        android:layout_height="@dimen/_48sdp"
                                        android:padding="@dimen/_8sdp"
                                        app:srcCompat="@xml/evening_selector"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/eveningTime"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Evening"
                                        android:textColor="@color/colorBlack90"
                                        android:textSize="@dimen/_12ssp"
                                        app:fontFamily="@font/biryani"/>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>