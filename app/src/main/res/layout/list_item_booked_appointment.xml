<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/appointmentItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/doctorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"
                    android:text="Dr. Mallory P Neill"
                    android:textSize="@dimen/_13ssp"
                    app:fontFamily="@font/biryani_bold"/>

            <androidx.cardview.widget.CardView
                    android:id="@+id/moreDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/colorPrimary">

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:paddingLeft="@dimen/_8sdp"
                        android:textColor="@color/colorWhite"
                        android:text="More Details"
                        android:textSize="@dimen/_10ssp"
                        app:fontFamily="@font/biryani"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appointmentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:drawableLeft="@drawable/ic_time"
                android:drawablePadding="@dimen/_5sdp"
                android:textColor="@color/colorBlack"
                android:textAllCaps="true"
                android:text="Friday | 09 Aug 2019, 8:00 PM - 8:30 PM"
                android:textSize="@dimen/_11ssp"
                app:fontFamily="@font/biryani_light"/>
    </LinearLayout>

    <View
            android:id="@+id/appointmentDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:alpha="0.6"
            android:background="@color/colorAccent"/>
</LinearLayout>