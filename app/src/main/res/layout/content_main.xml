<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackground"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main">


    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_150sdp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/_14sdp"
                android:paddingRight="@dimen/_14sdp"
                android:paddingBottom="@dimen/_14sdp"
                android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:elevation="12dp"
                    android:layout_marginTop="@dimen/_44sdp"
                    app:cardCornerRadius="6dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_6sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="Quick Links"
                            android:textSize="@dimen/_12ssp"
                            app:fontFamily="@font/biryani_semibold"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                            <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/callDoctor"
                                    android:layout_width="@dimen/_52sdp"
                                    android:layout_height="@dimen/_52sdp"
                                    android:padding="@dimen/_6sdp"
                                    android:background="@drawable/color_circle"
                                    app:srcCompat="@drawable/ic_call"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:fontFamily="@font/biryani_semibold"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/colorPrimary"
                                    android:text="Call"
                                    android:textSize="@dimen/_14ssp"/>


                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:gravity="center">

                            <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/bookAppointment"
                                    android:layout_width="@dimen/_52sdp"
                                    android:layout_height="@dimen/_52sdp"
                                    android:background="@drawable/color_circle"
                                    app:srcCompat="@drawable/ic_book_appointment"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:fontFamily="@font/biryani_semibold"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/colorPrimary"
                                    android:text="Appointment"
                                    android:textSize="@dimen/_14ssp"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:gravity="center">

                            <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/reports"
                                    android:layout_width="@dimen/_52sdp"
                                    android:layout_height="@dimen/_52sdp"
                                    android:padding="@dimen/_12sdp"
                                    android:background="@drawable/color_circle"
                                    app:srcCompat="@drawable/ic_reports"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:fontFamily="@font/biryani_semibold"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/colorPrimary"
                                    android:text="Reports"
                                    android:textSize="@dimen/_14ssp"/>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:elevation="12dp"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:cardCornerRadius="6dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_6sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="Appointment Fee"
                            android:textSize="@dimen/_12ssp"
                            app:fontFamily="@font/biryani_semibold"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/appointmentFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:layout_marginTop="-4dp"
                            android:textColor="@color/colorBlack90"
                            android:text="Rs 300 ( Single Consultation )"
                            android:textSize="@dimen/_12ssp"
                            app:fontFamily="@font/biryani"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/upcomingAppointmentsCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:elevation="12dp"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:cardCornerRadius="6dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_6sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="Upcoming Appointments"
                            android:textSize="@dimen/_12ssp"
                            app:fontFamily="@font/biryani_semibold"/>

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/appointmentsRecycleView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:elevation="12dp"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:cardCornerRadius="6dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="Locations"
                            android:textSize="@dimen/_12ssp"
                            app:fontFamily="@font/biryani_semibold"/>

                    <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/locationsRecycleView"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:elevation="12dp"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:cardCornerRadius="6dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_6sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="Appointment Fee"
                            android:textSize="@dimen/_12ssp"
                            app:fontFamily="@font/biryani_semibold"/>

                    <androidx.appcompat.widget.AppCompatTextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:layout_marginTop="-4dp"
                            android:textColor="@color/colorBlack90"
                            android:text="Rs 300 ( Single Consultation )"
                            android:textSize="@dimen/_12ssp"
                            app:fontFamily="@font/biryani"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/topLayout">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_134sdp"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@color/colorPrimaryDark"
                    android:paddingLeft="@dimen/_14sdp"
                    android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/doctorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorWhite"
                        android:text=""
                        android:textSize="@dimen/_14ssp"
                        app:fontFamily="@font/biryani_bold"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/doctorSpecialization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorWhite"
                        android:alpha="0.94"
                        android:layout_marginTop="@dimen/_minus8sdp"
                        android:text=""
                        android:textSize="@dimen/_12ssp"
                        app:fontFamily="@font/biryani"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/doctorExperience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/_minus8sdp"
                        android:textColor="@color/colorWhite"
                        android:text=""
                        android:alpha="0.94"
                        android:textSize="@dimen/_12ssp"
                        app:fontFamily="@font/biryani"/>
            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:scaleType="fitXY"
                android:layout_marginRight="@dimen/_minus14sdp"
                app:srcCompat="@drawable/top_curve"
                app:tint="@color/colorPrimaryDark"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/imageLayout"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:background="@drawable/color_accent_rectangle"
            android:elevation="5dp">

        <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_108sdp"
                android:layout_height="@dimen/_108sdp"
                app:cardCornerRadius="@dimen/_4sdp"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/colorWhite">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/doctorImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:visibility="visible"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorWhite"
            app:elevation="4dp"
            android:layout_marginTop="@dimen/_130sdp"
            app:cardCornerRadius="0dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_28sdp">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_available"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_8sdp">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/availableText"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/colorBlack90"
                        android:text="Available on call"
                        android:textSize="@dimen/_10ssp"
                        app:fontFamily="@font/biryani_semibold"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/lastUpdatedTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:layout_marginTop="-4dp"
                        android:textColor="@color/colorBlack90"
                        android:text="Last updated Mon : 29 July, 2019"
                        android:textSize="@dimen/_9ssp"
                        app:fontFamily="@font/biryani_light"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




    <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"
            android:visibility="visible">

    </FrameLayout>
</RelativeLayout>