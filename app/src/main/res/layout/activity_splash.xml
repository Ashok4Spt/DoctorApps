<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_74sdp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/top_curve"
            app:tint="@color/colorPrimaryDark"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

        <LinearLayout
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:gravity="center"
                android:background="@drawable/color_accent_circle">

            <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_118sdp"
                    android:layout_height="@dimen/_118sdp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="@dimen/_59sdp"
                    app:cardElevation="0dp">

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/doctorImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@mipmap/ic_launcher"
                        android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/doctorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="@string/app_name"
                android:textSize="@dimen/_18ssp"
                app:fontFamily="@font/biryani_bold"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_74sdp"
            android:scaleType="fitXY"
            android:layout_marginRight="@dimen/_minus44sdp"
            app:srcCompat="@drawable/bottom_curve"/>

</LinearLayout>